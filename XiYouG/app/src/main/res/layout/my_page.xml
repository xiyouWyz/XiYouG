<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/info_news_back"
        android:layout_weight="2"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/user_logo"
                android:layout_gravity="center_horizontal"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="软件1403"
                    android:textColor="@color/my_major"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/my_col"
                    />
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王勇智"
                    android:textColor="@color/my_major"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/my_col"
                    android:layout_marginStart="7dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/studyNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S1434746"
                android:textColor="@color/my_studyNumber"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:textSize="@dimen/my_col"
                />

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_col_divide"
            android:background="@color/my_col_divide"
            />
        <LinearLayout
            android:id="@+id/my_bor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/my_bor"
                    style="@style/MyTheme"
                    android:textSize="@dimen/my_col"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=">"
                    style="@style/MyTheme"
                    android:textSize="@dimen/my_col_arrow"
                    android:textColor="@color/my_col_arrow"
                    android:gravity="right"
                    android:layout_marginEnd="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_col_divide"
            android:background="@color/my_col_divide"
            />
        <LinearLayout
            android:id="@+id/my_col"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/my_col"
                    style="@style/MyTheme"
                    android:textSize="@dimen/my_col"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=">"
                    style="@style/MyTheme"
                    android:textSize="@dimen/my_col_arrow"
                    android:textColor="@color/my_col_arrow"
                    android:gravity="right"
                    android:layout_marginEnd="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_col_divide"
            android:background="@color/my_col_divide"
            />
        <LinearLayout
            android:id="@+id/my_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/my_history"
                    style="@style/MyTheme"
                    android:textSize="@dimen/my_col"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=">"
                    style="@style/MyTheme"
                    android:textSize="@dimen/my_col_arrow"
                    android:textColor="@color/my_col_arrow"
                    android:gravity="right"
                    android:layout_marginEnd="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_col_divide"
            android:background="@color/my_col_divide"
            />


    </LinearLayout>
</LinearLayout>
