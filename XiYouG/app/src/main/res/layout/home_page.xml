<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#D32F2E"
        android:padding="8dp">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/home_title"
            android:textColor="#fff"
            android:textSize="@dimen/libraryTitle"

            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/search" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/slideshow"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:id="@+id/rank_collection_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical"
            android:padding="15dp"

            >

            <RelativeLayout
                android:id="@+id/rank_collection_img"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:background="@drawable/home_rankshape"
                android:clickable="true"
                android:padding="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rank_collection"
                    android:clickable="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/rank_collection_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rank_collection"
                android:textColor="@color/rank_text"
                android:textSize="@dimen/rank_viewpager"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rank_borrow_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <RelativeLayout
                android:id="@+id/rank_borrow_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/home_rankshape"
                android:clickable="true"
                android:padding="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rank_borrow"
                    android:clickable="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/rank_borrow_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rank_borrow"
                android:textColor="@color/rank_text"
                android:textSize="@dimen/rank_viewpager" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rank_look_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <RelativeLayout
                android:id="@+id/rank_look_img"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:background="@drawable/home_rankshape"
                android:clickable="true"
                android:padding="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rank_look"
                    android:clickable="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/rank_look_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rank_look"
                android:textColor="@color/rank_text"
                android:textSize="@dimen/rank_viewpager" />
        </LinearLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_rank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/slideshow" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/slideshow"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#F44236">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Top10"
                    android:textColor="#fff"
                    android:textSize="20sp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

